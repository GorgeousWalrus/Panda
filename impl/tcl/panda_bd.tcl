# Procedure to create entire design; Provide argument to make
# procedure reusable. If parentCell is "", will use root.
proc create_root_design { parentCell } {

  variable script_folder
  variable design_name

  if { $parentCell eq "" } {
     set parentCell [get_bd_cells /]
  }

  # Get object for parentCell
  set parentObj [get_bd_cells $parentCell]
  if { $parentObj == "" } {
     catch {common::send_gid_msg -ssname BD::TCL -id 2090 -severity "ERROR" "Unable to find parent cell <$parentCell>!"}
     return
  }

  # Make sure parentObj is hier blk
  set parentType [get_property TYPE $parentObj]
  if { $parentType ne "hier" } {
     catch {common::send_gid_msg -ssname BD::TCL -id 2091 -severity "ERROR" "Parent <$parentObj> has TYPE = <$parentType>. Expected to be <hier>."}
     return
  }

  # Save current instance; Restore later
  set oldCurInst [current_bd_instance .]

  # Set parent object as current
  current_bd_instance $parentObj


  # Create interface ports

  # Create ports
  # CLK
  set sys_clk [ create_bd_port -dir I -type clk -freq_hz 100000000 sys_clk ]
  # RST
  set ext_rstn_i [ create_bd_port -dir I -type rst ext_rstn_i ]
  # GPIO
  set gpio [ create_bd_port -dir IO -from 7 -to 0 gpio ]
  # DBG (temporary)
  set dbg_cmd [ create_bd_port -dir I -from 7 -to 0 dbg_cmd ]
  set dbg_addr [ create_bd_port -dir I -from 31 -to 0 dbg_addr ]
  set dbg_di [ create_bd_port -dir I -from 31 -to 0 dbg_di ]
  set dbg_do [ create_bd_port -dir O -from 31 -to 0 dbg_do ]
  set dbg_ready [ create_bd_port -dir O dbg_ready ]

  # Create instance: panda_wrapper_0, and set properties
  set block_name panda_wrapper
  set block_cell_name panda_wrapper_0
  if { [catch {set panda_wrapper_0 [create_bd_cell -type module -reference $block_name $block_cell_name] } errmsg] } {
     catch {common::send_gid_msg -ssname BD::TCL -id 2095 -severity "ERROR" "Unable to add referenced block <$block_name>. Please add the files for ${block_name}'s definition into the project."}
     return 1
   } elseif { $panda_wrapper_0 eq "" } {
     catch {common::send_gid_msg -ssname BD::TCL -id 2096 -severity "ERROR" "Unable to referenced block <$block_name>. Please add the files for ${block_name}'s definition into the project."}
     return 1
   }
  
  # Create port connections

  # CLK
  connect_bd_net -net n_sys_clk [get_bd_ports sys_clk] [get_bd_pins panda_wrapper_0/clk]
  # RST
  connect_bd_net -net n_ext_rstn_i [get_bd_ports ext_rstn_i] [get_bd_pins panda_wrapper_0/rstn_i]
  # GPIO
  connect_bd_net -net n_gpio [get_bd_ports gpio] [get_bd_pins panda_wrapper_0/gpio_io]
  # DBG (temp)
  connect_bd_net -net n_dbg_cmd [get_bd_ports dbg_cmd] [get_bd_pins panda_wrapper_0/dbg_cmd_i]
  connect_bd_net -net n_dbg_addr [get_bd_ports dbg_addr] [get_bd_pins panda_wrapper_0/dbg_addr_i]
  connect_bd_net -net n_dbg_di [get_bd_ports dbg_di] [get_bd_pins panda_wrapper_0/dbg_data_i]
  connect_bd_net -net n_dbg_do [get_bd_ports dbg_do] [get_bd_pins panda_wrapper_0/dbg_data_o]
  connect_bd_net -net n_dbg_ready [get_bd_ports dbg_ready] [get_bd_pins panda_wrapper_0/dbg_ready_o]

  # Create address segments


  # Restore current instance
  current_bd_instance $oldCurInst

  save_bd_design
}
